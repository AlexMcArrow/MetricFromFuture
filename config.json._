{
    "server": {
        "port": 20744
    },
    "metric": {
        "test": {
            "active": true,
            "metric": {
                "interval": 1000,
                "driver": "dns",
                "path": {
                    "rec": "google.com",
                    "type": "A",
                    "dns": "8.8.8.8"
                }
            },
            "agr": {
                "lvl": {
                    "active": true,
                    "notice": 60,
                    "warning": 75,
                    "error": 100
                },
                "history": {
                    "active": true,
                    "max": 10
                },
                "avg": {
                    "active": true,
                    "zones": {
                        "10": {
                            "active": true,
                            "interval": 10000,
                            "src": "@live"
                        },
                        "30": {
                            "active": true,
                            "interval": 30000,
                            "src": "@zones.10"
                        },
                        "60": {
                            "active": true,
                            "interval": 60000,
                            "src": "@zones.10"
                        }
                    }
                }
            },
            "call": {
                "caller": "shell",
                "path": "echo $1 $2 $3 >> call.log"
            },
            "log": {
                "logger": "local"
            }
        }
    },
    "caller": {
        "shell": {
            "active": true,
            "driver": "shell",
            "path": "echo $1 $2 $3 >> $1.call.log"
        }
    },
    "logger": {
        "local": {
            "active": true,
            "driver": "file",
            "path": "./logs/$1.log"
        }
    }
}
